<h2><%= @list.name %></h2>

<% @list.bookmarks.each do |bookmark| %>
  <%= bookmark.movie.title %>
  <p>
  <%= bookmark.comment %>
  </p>
  <%= bookmark.movie.overview %>
  <p>
  <%= image_tag bookmark.movie.poster_url, class: "movie-poster" %>
  </p>
  <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <hr>
<% end %>

<%= link_to "Delete",list_path(@list),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn-btn-flat"%>
<%= link_to "Go back to the lists", lists_path , class: "btn-btn-flat"%>
<%= link_to "Add new movie", new_list_bookmark_path(@list), class: "btn-btn-flat" %>
